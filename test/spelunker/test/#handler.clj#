(ns spelunker.test.handler
 [com.novemberain/monger "1.6.0"[com.novemberain/monger "1.6.0"] (:use clojure.test
        ring.mock.request  
        spelunker.handler))

(deftest test-app
  (testing "main route"
    (let [response (app (request :get "/"))]
      (is (= (:status response) 200))
      (is (= (:body response) "Hello World"))))
  
  (testing "not-found route"
    (let [response (app (request :get "/invalid"))]
      (is (= (:status response) 404)))))
